{
    "extends": "@onlook/typescript/next-react.json",
    "compilerOptions": {
        "baseUrl": ".",
        "allowArbitraryExtensions": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "/*": [
                "./*"
            ],
            "~/*": [
                "./src/*"
            ],
            "@automerge/automerge": [
                "../../../node_modules/@automerge/automerge/dist/mjs/entrypoints/slim.js"
            ]
        }
    },
    "include": [
        "src",
        "tests",
        ".next/types/**/*.ts",
        "messages/en.d.json.ts",
        "../../../packages/file-system/src/code-fs.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}